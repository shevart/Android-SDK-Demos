    tools:context="com.shevart.androidcorelearn.MainActivity">

    <TextView
        style="@style/ACLBaseWidget.TextView.TopicTitle"
        android:text="@string/select_topic" />

    <Button
        android:id="@+id/btServiceTopic"
        style="@style/ACLBaseWidget.Button.OpenTopic"
        android:text="@string/services" />

    <Button
        android:id="@+id/btFragmentsTopic"
        style="@style/ACLBaseWidget.Button.OpenTopic"
        android:text="@string/fragments" />

    <Button
        android:id="@+id/btMultiThreads"
        style="@style/ACLBaseWidget.Button.OpenTopic"
        android:text="@string/multi_threads" />

    <Button
        android:id="@+id/btArchComponents"
        style="@style/ACLBaseWidget.Button.OpenTopic"
        android:text="@string/arch_components" />
</LinearLayout>
