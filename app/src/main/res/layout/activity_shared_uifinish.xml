<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_light"
    tools:context="com.shevart.androidcorelearn.animation.transition.sharedviewsui.SharedUIFinishActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="180dp"
        android:padding="16dp"
        android:transitionName="@string/shared_ui_view">

        <ImageView
            android:id="@+id/ivCloseSharedUi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:transitionName="@string/shared_ui_icon"
            app:srcCompat="@drawable/ic_close_grey"/>

        <TextView
            android:id="@+id/tvTitleSharedUI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="@string/title"
            android:layout_marginTop="4dp"
            android:textSize="27sp"
            android:transitionName="@string/shared_ui_text"/>
    </LinearLayout>
</LinearLayout>
